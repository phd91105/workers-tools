{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "Node",
    "allowJs": false,
    "strict": true,
    "sourceMap": false,
    "typeRoots": ["node_modules"],
    "types": ["@cloudflare/workers-types"],
    "paths": {
      "@/*": ["./src/*"],
      "@views": ["./views/index.ts"]
    }
  },
  "include": ["**/*.ts", "views"],
  "exclude": ["node_modules"]
}
